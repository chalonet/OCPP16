@model ChargingTimeViewModel

<h2>Edit Charging Time</h2>

<div class="card">
    <div class="card-header">
        <h4>Tag Information</h4>
    </div>
    <div class="card-body">
        <p><strong>Tag ID:</strong> @ViewData["TagId"]</p>
        <p><strong>Tag Name:</strong> @ViewData["TagName"]</p>
        <p><strong>Current Charging Time:</strong> @ViewData["currentTime"] minutos</p>
    </div>
</div>

<form asp-action="EditChargingTime" method="post">
    <div class="form-group mt-4">
        <label asp-for="NewChargingTime">New Charging Time:</label>
        <input asp-for="NewChargingTime" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" name="command" value="add" class="btn btn-success mr-2"><i class="fas fa-plus"></i> Add Time</button>
        <button type="submit" name="command" value="subtract" class="btn btn-danger"><i class="fas fa-minus"></i> Subtract Time</button>
    </div>
    <input type="hidden" asp-for="TagId" value="@ViewData["TagId"]" />
    <input type="hidden" asp-for="TagName" value="@ViewData["TagName"]" />
    <input type="hidden" asp-for="CurrentChargingTime" value="@ViewData["currentTime"]" />
</form>
