@using System.Collections.Generic
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@model UserViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<h1><i class="fas fa-user"></i> @ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-8">
        <section>
            <form id="loginForm" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="col-md-2 control-label">@Localizer["Username"]</label>
                    <div class="col-md-10">
                        <input asp-for="Username" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label">@Localizer["Password"]</label>
                    <div class="col-md-10">
                        <input asp-for="Password" type="password" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        // Manejar el envío del formulario y redireccionar después de la autenticación
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            // Evitar que el formulario se envíe de forma predeterminada
            event.preventDefault();
            
            // Obtener los datos del formulario
            var formData = new FormData(event.target);
            
            // Realizar una solicitud de autenticación asincrónica (aquí debes agregar tu lógica para autenticar al usuario)
            fetch('/Account/Login', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                // Verificar si la autenticación fue exitosa (aquí debes agregar tu lógica de verificación)
                if (response.ok) {
                    // Redireccionar al usuario después de la autenticación
                    window.location.href = '@Url.Action("Index", "Home")'; // Cambia esto por la ruta deseada
                }
            })
            .catch(error => {
                console.error('Error during login:', error);
            });
        });
    </script>
}
